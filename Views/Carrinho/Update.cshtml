@model Ecommerce.Models.CartItem
@{
    ViewData["Title"] = "Editar item";
}
<br/>
<h2>Editar item</h2>

<form asp-action="Update" method="post">
    <input type="hidden" name="id" value="@Model.IdProduto" />
    <div class="mb-3">
        <label class="form-label">Produto</label>
        <input class="form-control" value="@Model.NomeProduto" readonly />
    </div>
    <div class="mb-3">
        <label asp-for="Quantidade" class="form-label"></label>
        <input asp-for="Quantidade" class="form-control" min="1" />
    </div>
    <button class="btn btn-primary">Salvar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
