@model Ecommerce.Models.CartItem
@{
    ViewData["Title"] = "Adicionar ao Carrinho";
}
<h2>Adicionar ao Carrinho</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="IdProduto" />
    <div class="mb-3">
        <label asp-for="Quantidade" class="form-label"></label>
        <input asp-for="Quantidade" class="form-control" min="1" />
    </div>
    <button class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</form>
