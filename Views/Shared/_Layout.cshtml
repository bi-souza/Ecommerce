
<!DOCTYPE html>
<html lang="pt-br">
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@inject Ecommerce.Repositories.ICategoriaRepository CategoriaRepository
@{
    
    var nomeCliente = Context.Session.GetString("NomeCliente");
    
    
    var todasCategorias = CategoriaRepository.ReadAll(); 
    var categoriasVisiveis = todasCategorias.Take(4).ToList();   
    var categoriasDropdown = todasCategorias.Skip(4).ToList();   
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Empório Irmãs da Terra</title>
    <link rel="icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-principal">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo/logo.jpg" alt="Logo Empório Irmãs da Terra" style="height: 40px;" class="me-2"> <span style="color: var(--cor-verde-floresta); font-weight: 700; font-size: 1.2rem;">
        Empório Irmãs da Terra
                    </span>
                </a>    
                <div class="mx-auto w-50">
                    <form class="form-busca" asp-controller="Produto" asp-action="Search" method="get">
                        
                        <input class="form-control" type="search" placeholder="O que você procura?" name="termo">
                        
                        <button class="btn btn-busca" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </form>
                </div>

                <div class="d-flex nav-icones align-items-center">
                    @{
                        
                        var nomeClienteSessao = Context.Session.GetString("NomeCliente");
                        var nomeAdminSessao   = Context.Session.GetString("NomeAdmin");
                        
                        // 2. DETERMINAR SE ALGUÉM ESTÁ LOGADO
                        bool isUserLoggedIn = !string.IsNullOrEmpty(nomeClienteSessao) || !string.IsNullOrEmpty(nomeAdminSessao);
                                               
                        string carrinhoController = "Carrinho";
                        string carrinhoAction = "Index";

                        if (!isUserLoggedIn) 
                        {
                            carrinhoController = "Auth";
                            carrinhoAction = "Login";
                        }
                    
                        
                        @if (string.IsNullOrEmpty(nomeClienteSessao)) 
                        {
                            carrinhoController = "Auth";
                            carrinhoAction = "Login";
                        }
                    }

                    
                    @if (isUserLoggedIn) // Bloco de exibição: Usuário Logado (Cliente ou Admin)
                    {
                        // Variáveis para a exibição dinâmica do perfil
                        string nomeUsuario      = "";
                        string perfilController = "";
                        string perfilAction     = "";
                        string tituloLink       = "";

                        if (!string.IsNullOrEmpty(nomeAdminSessao))
                        {
                            // É um Administrador
                            nomeUsuario      = nomeAdminSessao;
                            perfilController = "Admin";
                            perfilAction     = "Dashboard";
                            tituloLink       = "Gerenciar";
                        }
                        else // É um Cliente (já que isUserLoggedIn é true e não é Admin)
                        {
                            nomeUsuario      = nomeClienteSessao;
                            perfilController = "Cliente";
                            perfilAction     = "Perfil";
                            tituloLink       = "Meu Perfil";
                        }

                        <div class="d-flex align-items-start me-3">
                            <a asp-controller="Cliente" asp-action="Perfil" class="nav-link p-0" 
                            title="@tituloLink" style="margin-right: 5px; margin-top: 3px;">
                                <i class="fa fa-user-circle fa-2x"></i>
                            </a>

                            <div class="d-flex flex-column align-items-start justify-content-center">
                                <span style="font-size: 0.9em; font-weight: 500; line-height: 1.2;">
                                    Olá, @nomeUsuario!
                                </span>
                                <a asp-controller="Auth" asp-action="Logout" class="nav-link p-0 text-danger" 
                                data-bs-toggle="modal" data-bs-target="#modalConfirmacaoLogout" 
                                style="font-size: 0.8em; text-decoration: underline; line-height: 1.2;">
                                    Sair
                                </a>
                            </div>
                        </div>
                    }
                    else // Bloco de exibição: Usuário Deslogado
                    {
                        <a class="nav-link d-flex align-items-center me-3" 
                        asp-controller="Auth" asp-action="Login">
                            <i class="fa fa-user-circle fa-2x me-2"></i>
                            <div class="d-flex flex-column" style="line-height: 1.2; font-size: 0.9em;">
                                <span>Entre ou</span>
                                <strong>Cadastre-se</strong>
                            </div>
                        </a>
                    }
                    
                    
                    <a class="nav-link d-flex align-items-center" asp-controller="@carrinhoController" asp-action="@carrinhoAction">
                        <i class="fa fa-shopping-cart fa-2x me-2"></i>
                        <div class="d-flex flex-column" style="line-height: 1.2; font-size: 0.9em;">
                            <span>Meu</span>
                            <strong>Carrinho</strong>
                        </div>
                    </a>
                </div>
            </div>
        </nav>

        <nav class="navbar navbar-expand-sm navbar-categorias">
            <div class="container">
                <div class="navbar-nav d-flex">
                    
                    @foreach (var cat in categoriasVisiveis)
                    {
                        <a class="nav-link" asp-controller="Produto" asp-action="PorCategoria" asp-route-id="@cat.IdCategoria">@cat.NomeCategoria</a>
                    }
                    
                    
                    @if (categoriasDropdown.Any())
                    {
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Mais Categorias
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @foreach (var cat in categoriasDropdown)
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="Produto" asp-action="PorCategoria" asp-route-id="@cat.IdCategoria">@cat.NomeCategoria</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                    
                    
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <a href="https://wa.me/5517981250517" class="whatsapp-float" target="_blank">
        <i class="fab fa-whatsapp"></i>
    </a>

    <footer class="footer py-3">
        <div class="container text-center py-2">
            <div class="row">
                <div class="col-12">
                    <h5>REDES SOCIAIS </h5>
                    <div class="social-icons">
                        <a href="https://www.facebook.com/emporioirmasdaterra/"><i class="fab fa-facebook-f"></i></a>
                        <a href="https://www.instagram.com/emporioirmasdaterra/"><i class="fab fa-instagram"></i></a>
                            @{
                                
                                string papel = HttpContextAccessor.HttpContext.Session.GetString("Papel");
                            }

                            @if (papel == "Admin")
                            {
                                
                                <a asp-controller="Admin" asp-action="Dashboard" class="admin-float" title="Gerenciar Produtos">
                                    <i class="fas fa-cog"></i> 
                                </a>
                            }

                        <a href="https://wa.me/5517981250517"><i class="fab fa-whatsapp"></i></a>                       
                                               
                    </div>
                </div>
            </div>
            <hr style="border-color: rgba(255,255,255,0.2);">
            <p>&copy; @DateTime.Now.Year - Empório Irmãs da Terra</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <div class="modal fade" id="modalConfirmacaoLogout" tabindex="-1" aria-labelledby="modalConfirmacaoLogoutLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalConfirmacaoLogoutLabel">Encerrar Sessão</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Você tem certeza que deseja sair?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <a asp-controller="Auth" asp-action="Logout" class="btn btn-danger">
                        Sim, Encerrar Sessão
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>