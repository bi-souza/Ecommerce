@model List<Ecommerce.Models.HistoricoPedido>

@{
    ViewData["Title"] = "Meus pedidos";
}

<br>
<h2>Meus pedidos</h2>

@if (!Model.Any())
{
    <p>Você ainda não possui pedidos cadastrados.</p>
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Ver produtos</a>
}
else
{
    <table class="table table-striped table-hover mt-3">
        <thead class="table-success">
            <tr>
                <th>#</th>
                <th>Data</th>
                <th>Itens</th>
                <th>Status</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.IdPedido</td>
                <td>@p.DataPedido.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@p.QuantidadeItens</td>
                <td>@p.StatusPedido</td>
                <td>R$ @p.ValorTotal.ToString("0.00")</td>
            </tr>
        }

        </tbody>
    </table>
}
