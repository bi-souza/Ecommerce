@model Ecommerce.Models.Cliente

@{
    Layout = null;
    ViewData["Title"] = "Cadastro de Cliente";
}

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css"> 
    <title>@ViewData["Title"] - Empório Irmãs da Terra</title>
</head>
<body>
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-4">Crie sua conta</h2>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center">@ViewBag.Error</div>
                    }

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <ul>
                                @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@e.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <form asp-action="Cadastro" method="post" novalidate>
                        <div class="mb-3">
                            <label class="form-label">Nome</label>
                            <input asp-for="NomeCliente" class="form-control" value="@Model?.NomeCliente" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">CPF</label>
                            <input asp-for="Cpf" class="form-control" value="@Model?.Cpf" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" value="@Model?.Email" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Telefone</label>
                            <input asp-for="Telefone" class="form-control" value="@Model?.Telefone" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Data de Nascimento</label>
                            <input asp-for="DataNasc" type="date" class="form-control" value="@(Model?.DataNasc.ToString("yyyy-MM-dd"))" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Senha</label>
                            <input asp-for="SenhaHash" type="password" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Confirmar senha</label>
                            <input asp-for="ConfirmarSenha" type="password" class="form-control" required />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Cadastrar</button>
                            <a asp-controller="Cliente" asp-action="Login" class="btn btn-secondary mt-2">Já tenho conta</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
