@model Ecommerce.Models.Cliente
@{
    ViewData["Title"] = "Cadastro de Cliente";
}

<div class="position-fixed top-0 start-0 w-100 h-100" style="backdrop-filter: blur(5px); z-index: 0;"></div>

<div class="d-flex justify-content-center align-items-start min-vh-100 py-5" style="position: relative; z-index: 10;">
    <div class="card shadow-lg border-0" style="width: 800px; backdrop-filter: blur(12px); background-color: rgba(255,255,255,0.95); border-radius: 20px; padding: 30px;">

        <!-- Cabeçalho do formulário -->
        <div class="card-header bg-success text-white text-center rounded-top">
            <h2 class="fw-bold mb-0" style="font-size: 2.5rem;">Cadastre-se</h2>
        </div>

        <!-- Corpo do Formulário -->
        <div class="card-body">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Error
                </div>
            }

            <form asp-action="Cadastro" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Outros campos... -->
                <div class="mb-4">
                    <label asp-for="Nome" class="form-label fw-bold"></label>
                    <input asp-for="Nome" class="form-control form-control-lg" style="height: 60px; font-size: 1.25rem;" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Cpf" class="form-label fw-bold"></label>
                    <input asp-for="Cpf" type="tel" inputmode="numeric" class="form-control form-control-lg" placeholder="Apenas dígitos" maxlength="11" style="height: 60px; font-size: 1.25rem;" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" class="form-control form-control-lg" style="height: 60px; font-size: 1.25rem;" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Telefone" class="form-label fw-bold"></label>
                    <input asp-for="Telefone" type="tel" inputmode="numeric" class="form-control form-control-lg" placeholder="DDD + Telefone (apenas dígitos)" maxlength="11" style="height: 60px; font-size: 1.25rem;" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="DataNasc" class="form-label fw-bold">Data de Nascimento (dd/mm/aaaa)</label>
                    <input asp-for="DataNasc" type="text" class="form-control form-control-lg" placeholder="Ex: 01/01/2002" style="height: 60px; font-size: 1.25rem;" />
                    <span asp-validation-for="DataNasc" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="SenhaHash" class="form-label fw-bold">Senha</label>
                    <div class="input-group">
                        <input asp-for="SenhaHash" type="password" class="form-control form-control-lg" id="SenhaHash" style="height: 60px; font-size: 1.25rem;"/>
                        <button type="button" class="btn btn-link text-secondary fw-bold" style="text-decoration: none;" 
                                onmouseover="this.style.color='blue'" onmouseout="this.style.color='gray'" 
                                onclick="toggleSenha('SenhaHash')">
                            ver
                        </button>
                    </div>
                    <span asp-validation-for="SenhaHash" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmarSenha" class="form-label fw-bold">Confirmar Senha</label>
                    <div class="input-group">
                        <input asp-for="ConfirmarSenha" type="password" class="form-control form-control-lg" id="ConfirmarSenha" style="height: 60px; font-size: 1.25rem;"/>
                        <button type="button" class="btn btn-link text-secondary fw-bold" style="text-decoration: none;" 
                                onmouseover="this.style.color='blue'" onmouseout="this.style.color='gray'" 
                                onclick="toggleSenha('ConfirmarSenha')">
                            ver
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
                </div>

                <div class="d-grid gap-3 mt-4">
                    <button type="submit" class="btn btn-success btn-lg" style="height: 65px; font-size: 1.5rem;">Finalizar Cadastro</button>
                </div>

                <p class="mt-4 text-center" style="font-size: 1.1rem;">
                    Já tem conta? <a asp-controller="Auth" asp-action="Login">Faça Login</a>
                </p>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function toggleSenha(id) {
            var input = document.getElementById(id);
            input.type = input.type === "password" ? "text" : "password";
        }
    </script>
}