@model Ecommerce.Models.LoginViewModel 

@{
    
    Layout = null; 
    ViewData["Title"] = "Login";
}

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css"> 
    <title>@ViewData["Title"] - Empório Irmãs da Terra</title>
</head>
<body>
    
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm custom-card-auth">
                    <div class="card-body p-4 p-md-5">
                        <h2 class="card-title text-center mb-4">Acesso à Sua Conta</h2>
                        
                        @if(ViewBag.Error != null) {
                            <div class="alert alert-danger">@ViewBag.Error</div>
                        }

                        <form asp-controller="Auth" asp-action="Login" method="post">
                            
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="mb-3">
                                <label for="inputEmail" class="form-label">E-mail</label>
                                <input type="email" class="form-control" id="inputEmail" name="Email" value="@Model.Email" required>
                            </div>

                                <div class="mb-4">
                                    <label for="inputPassword" class="form-label">Senha</label>
                                    <div class="input-group">
                                        <input type="password" class="form-control" id="inputPassword" name="Senha" required style="height: 50px; font-size: 1rem;">
                                        <button type="button" class="btn btn-link text-secondary fw-bold" style="text-decoration: none;" 
                                                onmouseover="this.style.color='blue'" onmouseout="this.style.color='gray'" 
                                                onclick="toggleSenha('inputPassword')">
                                            ver
                                        </button>
                                    </div>
                                </div>

                                <script>
                                    function toggleSenha(id) {
                                        var input = document.getElementById(id);
                                        input.type = input.type === "password" ? "text" : "password";
                                    }
                                </script>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-auth-submit">Entrar</button>                                
                            </div>
                            
                            <p class="text-center mt-3 mb-0">
                                Ainda não tem conta? 
                                <a asp-controller="Cliente" asp-action="Cadastro" class="link-auth-action">Cadastre-se aqui</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
</html>