<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    </head>
    @*<body class="container">*@

        <div class="container mt-4">

        <h1 class="mb-4">Novo Produto</h1>
        
        <form action="/produto/create" method="POST">
            
            <label>Nome do Produto:</label>
            <input name="NomeProduto" class="form-control"/>
            <br/>

            <label>Descrição:</label>
            <textarea name="Descricao" class="form-control"></textarea>
            <br/>

            <label>Preço:</label>
            <input name="Preco" type="text" class="form-control" />
            <br/>

            <label>Estoque:</label>
            <input name="Estoque" type="number" class="form-control"/>
            <br/>

            <label>URL da Imagem:</label>
            <input name="ImagemUrl" class="form-control"/>
            <br/>

            <label>Categoria:</label>
            <select name="CategoriaId" class="form-control">
                @foreach(var categoria in ViewBag.Categorias) { 
                    <option value="@categoria.IdCategoria">@categoria.NomeCategoria</option>
                }
            </select>
            <br/>

            <label>Destaque:</label>
            <select name="Destaque" class="form-control">
                <option value="0">Não</option>
                <option value="1">Sim</option>
            </select>
            <br/>

            <button class="btn btn-outline-success">Salvar</button>
        </form>
    @*</body>*@
</html>