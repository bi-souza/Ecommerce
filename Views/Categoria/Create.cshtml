@model Ecommerce.Models.Categoria

@{
    ViewData["Title"] = "Nova Categoria";
    Layout = "_Layout"; 
}

<div class="container mt-4">

    <div class="row">
        <div class="col-md-6 offset-md-3">

            <h1 class="mb-4 text-dark">@ViewData["Title"]</h1>
            
            
            <form asp-controller="Categoria" asp-action="Create" method="POST">                
               
                <div class="mb-3">
                    <label for="NomeCategoria" class="form-label">Nome da Categoria:</label>                    
                   
                    <input name="NomeCategoria" class="form-control" />
                </div>
                
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-outline-success">
                        <i class="fas fa-save me-2"></i> Salvar
                    </button>
                    
                    <a asp-controller="Categoria" asp-action="Index" class="btn btn-primary">
                        Voltar Ã  Lista
                    </a>
                </div>
                
            </form>

        </div>
    </div>
</div>